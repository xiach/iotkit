upstream wap-admin {
    server                          localhost:8100 weight=1 max_fails=1 fail_timeout=60s;
}
server {
    listen                          8081;
#    listen                          80;
    server_name                     118.178.139.53 mfl.51acloud.com;
    access_log                      ./logs/air-web.access.log     main;
    error_log                       ./logs/air-web.error.log      notice;
#GZIP配置    
    gzip on;
    gzip_min_length 1k;
    gzip_buffers 4 16k;
   gzip_http_version 1.0;
    gzip_comp_level 2;
    gzip_types text/plain text/css application/javascript text/javascript application/x-javascript text/xml application/xml application/xml+rss application/json;
    gzip_vary off;
   gzip_disable "MSIE [1-6]\.";


    location / {
       expires -1; add_header Pragma "no-cache";
       add_header Cache-Control "no-store, no-cache, must-revalidate, post-check=0, pre-check=0";
       root /data0/app/air-admin-front/html/;
       try_files $uri $uri/ /index.html =404;
    }
   # location /air/ {
   #     alias    /data0/app/air-web-front/html/;
   # }
    location /static/ {
        alias    /data0/app/air-admin-front/html/static/;
    }
#   location /admin/ {
#       expires -1; add_header Pragma "no-cache";
#       add_header Cache-Control "no-store, no-cache, must-revalidate, post-check=0, pre-check=0";
#       root /data0/app/air-admin-front/html/;
#       try_files $uri $uri/ /index.html =404;
#    }
    location /admin/api/ {
        proxy_pass              http://wap-admin;
        proxy_set_header        Host            $host;   # ???  $http_host;
        proxy_set_header        X-Real-IP       $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header        X-Forwarded-Proto $scheme;
    }
